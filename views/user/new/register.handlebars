<div class="intro">
<section class="section-padding">


    <div class="container">

            <div class="row">

            <div class="col-md-8 hidden-xs">
              {{#if message}}
                  <div class="alert alert-success" role="alert">
                    {{#each message}}

                        <p>{{this}}</p>

                    {{/each}}
                  </div>
              {{/if}}

              {{#if errors}}
                  <div class="alert alert-danger" role="alert">
                    {{#each errors}}

                        <p>{{this}}</p>

                    {{/each}}
                  </div>
              {{/if}}
                <div class="login-banner" id="loginBanner">
                    <div class="jumbotron bg-blue" style="background: transparent; color: black;">
                        <div class="icon-container">
                            <i class="pe-7s-umbrella pe-5x pe-va pe-fw"></i>
                        </div>
                        <h1>Comprehensive</h1>
                        <p>Grumpy wizards make toxic brew for the evil Queen and Jack.</p>
                    </div>
                    <div class="jumbotron bg-green" style="background: transparent; color: black;">
                        <div class="icon-container">
                            <i class="pe-7s-users pe-5x pe-va pe-fw"></i>
                        </div>
                        <h1>Personalized</h1>
                        <p>Grumpy wizards make toxic brew for the evil Queen and Jack.</p>
                    </div>
                    <div class="jumbotron bg-black" style="background: transparent; color: black;">
                        <div class="icon-container">
                            <i class="pe-7s-science pe-5x pe-va pe-fw"></i>
                        </div>
                        <h1>Smart</h1>
                        <p>Grumpy wizards make toxic brew for the evil Queen and Jack.</p>
                    </div>
                    <div class="jumbotron bg-orange" style="background: transparent; color: black;">
                        <div class="icon-container">
                            <i class="pe-7s-graph1 pe-5x pe-va pe-fw"></i>
                        </div>
                        <h1>Analytics</h1>
                        <p>Grumpy wizards make toxic brew for the evil Queen and Jack.</p>
                    </div>
                </div>
                <div class="text-center" style="color: black; font-size: 40px;">
                     Code and win exciting prizes !
                </div>
            </div>
            <div class="col-md-4">

                <h3 class="section-title" style="color: black">Sign Up</h3>
                <form action="/user/register" method="post">
                    <div class="form-group">
                        <label for="inputName" style="color: black">Name</label>
                        <input type="text" class="form-control" id="inputName" placeholder="e.g. Rahul ..." name="name" required>
                    </div>
                    <div class="form-group">
                        <label for="inputEmail" style="color: black">Email</label>
                        <input type="email" class="form-control" id="inputEmail" placeholder="e.g. name@example.com ..."
                               name="email" required>
                    </div>
                    <div class="form-group">
                        <label for="phoneNo" style="color: black">Contact No.</label>
                        <input type="number" class="form-control" id="phoneNo" placeholder="e.g. 9430067326"
                               name="phone" required>
                    </div>
                    <div class="form-group">
                        <label for="college" style="color: black">College/University</label>
                        <input type="tect" class="form-control" id="university"
                               placeholder="e.g. DIT University" name="college" required>
                    </div>
                    <div class="form-group" >
                        <label for="year-of-pasing" style="color: black">Passing Year</label>
                        <select id="selectElementId" class="form-control">
                            <option disabled selected value>Select Passing Year</option>

                        </select>
                    </div>
                    <button type="submit" class="btn btn-success btn-block btn-lg">REGISTER</button>
                    <input type="hidden" name="_csrf" value="{{ _csrf }}"/>
                </form>

            </div>
        </div>
    </div>

</section>
</div>




