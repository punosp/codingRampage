<div class="intro">
<section class="section-padding">
    <div class="container">
        <div class="row">
            <div class="col-md-8 hidden-xs">
              {{#if message}}
                  <div class="alert alert-success" role="alert">
                    {{#each message}}

                        <p>{{this}}</p>

                    {{/each}}
                  </div>
              {{/if}}

              {{#if errors}}
                  <div class="alert alert-danger" role="alert">
                    {{#each errors}}

                        <p>{{this}}</p>

                    {{/each}}
                  </div>
              {{/if}}
              {{#if alert}}
                  <div class="alert alert-info" role="alert">
                    {{#each alert}}

                        <p>{{this}}</p>

                    {{/each}}
                  </div>
              {{/if}}
                <div class="login-banner" id="loginBanner">
                    <div class="jumbotron bg-blue" style="background: transparent; color: black;">
                        <div class="icon-container">
                            <i class="pe-7s-display2 pe-5x pe-va pe-fw"></i>
                        </div>
                        <h1>Coding</h1>
                        <p>Do you think you can code?</p>
                    </div>
                    <div class="jumbotron bg-green" style="background: transparent; color: black;">
                        <div class="icon-container">
                            <i class="pe-7s-hammer pe-5x pe-va pe-fw"></i>
                        </div>
                        <h1>Rampage</h1>
                        <p>Intensive coding for 12 hours.</p>
                    </div>
                    <div class="jumbotron bg-black" style="background: transparent; color: black;">
                        <div class="icon-container">
                            <i class="pe-7s-medal pe-5x pe-va pe-fw"></i>
                        </div>
                        <h1>Prizes</h1>
                        <p>HackerEarth T-Shirts and prizes upto 10K to be Won.</p>
                    </div>
                    <div class="jumbotron bg-orange" style="background: transparent; color: black;">
                        <div class="icon-container">
                            <i class="pe-7s-more pe-5x pe-va pe-fw"></i>
                        </div>
                        <h1>Want More?</h1>
                        <p>Come to Youthopia'16, 20-22 October. Lots of Prizes to be WON.</p>
                    </div>
                </div>
                <div class="text-center" style="color: black; font-size: 40px;">
                    Starts at 18<sup>th</sup> Oct 6:00pm.
                </div>
            </div>
            <div class="col-md-4">
                <h3 class="section-title">Login</h3>
                <ul>
                  {{#each errors}}
                      <li>
                        {{this}}
                      </li>
                  {{/each}}
                </ul>
                <form action="/user/login" method="post">
                    <div class="form-group">
                        <label for="inputEmail">Email</label>
                        <input type="email" class="form-control input-lg" id="inputEmail"
                               placeholder=" e.g. name@example.com ..." name="email">
                    </div>
                    <div class="form-group">
                        <label for="inputPassword">Password</label>
                        <input type="password" class="form-control input-lg" id="inputPassword"
                               placeholder=" e.g. myStrongPassword" name="password">
                    </div>

                    <button type="submit" class="btn btn-success btn-block btn-lg">LOGIN</button>
                    <input type="hidden" name="_csrf" value="{{ _csrf }}"/>
                </form>
            </div>
        </div>
    </div>
</section>


</div>


